<div class="post-list">
    <ul>
        <%for (post of posts){%>

            <li id="post-id-<%= post._id %>">
                <p><%=post.content%>
                    <small><%=post.user.name%></small>
                    <% if (locals.user && locals.user.id==post.user.id) { %>
                    <small><a class="delete-post-button" href="/post/destroy/<%=post.id%>">Delete</a></small>
                    <%}%>
                </p>
                <%- include('_comment'); %>
            </li>
            
        <%}%>
    </ul>
</div>